<Window x:Class="ProjectPRN.AdminProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN"
        mc:Ignorable="d"
        Title="Danh sách tất cả sản phẩm" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <DataGrid Grid.Column="0" Grid.Row="1" Name="dgvDisplay" AutoGenerateColumns="False" CanUserAddRows="False" Language="vi-VN">
                <DataGrid.Columns>

                    <DataGridTextColumn Header="Loại" Binding="{Binding Path=Category.CategoryName,Mode=OneWay}"/>
                    <DataGridTextColumn Header="Tên" Binding="{Binding Path=ProductName,Mode=OneWay}"/>
                    <DataGridTextColumn Header="Hãng" Binding="{Binding Path=Brand,Mode=OneWay}"/>
                    <DataGridTextColumn Header="Mô tả" Binding="{Binding Path=Description,Mode=OneWay}"/>
                    <DataGridTextColumn Header="Giá" Binding="{Binding Path=Price,Mode=OneWay,StringFormat={}{0:N0}}"/>
                    <DataGridTextColumn Header="Số lượng" Binding="{Binding Path=StockQuantity,Mode=OneWay}"/>
                    <DataGridTemplateColumn Header="Ảnh">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Width="50" Height="50">
                                    <Image.Source>
                                        <Binding Path="Image">
                                            <Binding.Converter>
                                                <local:ImagePathConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Image.Source>
                                </Image>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Path=status}"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                <!-- Ô nhập tìm kiếm -->
                <Label Content="Tìm kiếm:" VerticalAlignment="Center"/>
                <TextBox Name="txtSearch" Height="20" Width="100" Margin="5,0"/>
                <Button Name="btnSearch" Content="Tìm" Height="20" Width="50" Click="btnSearch_Click"/>

                <!-- Bộ lọc theo danh mục -->
                <Label Content="Danh mục:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <ComboBox Name="cbxCategoryFilter" Height="20" Width="150"/>

                <!-- Bộ lọc theo trạng thái -->
                <Label Content="Trạng thái:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <ComboBox Name="cbxStatusFilter" Height="20" Width="100">
                    <ComboBoxItem Content="Tất cả"/>
                    <ComboBoxItem Content="Active"/>
                    <ComboBoxItem Content="Inactive"/>
                </ComboBox>

                <Button Name="btnFilter" Content="Lọc" Height="20" Width="50" Margin="10,0,0,0" Click="btnFilter_Click"/>
                <Button Name="btnBack" Content="Quay lại" Width="50" Height="20" Margin="20,0,0,0" Click="btnBack_Click"/>
            </StackPanel>

        </Grid>

       

    </Grid>
</Window>
