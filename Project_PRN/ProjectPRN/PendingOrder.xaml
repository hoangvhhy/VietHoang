<Window x:Class="ProjectPRN.PendingOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PendingOrder" Height="600" Width="850" Loaded="Window_Loaded"
        Background="#F5F5F5">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
            <!-- Danh sách đơn hàng -->
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Background="White" Padding="10">
                <DataGrid Name="dgvOrders" AutoGenerateColumns="False" SelectionMode="Single"
                          SelectedItem="{Binding SelectedOrder}" CanUserAddRows="False"
                          RowBackground="White" AlternatingRowBackground="#F0F0F0"
                          BorderThickness="0" GridLinesVisibility="None"
                          SelectionChanged="dgvOrders_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã Đơn" Binding="{Binding OrderId,Mode=OneWay}" Width="80"/>
                        <DataGridTextColumn Header="Mã Tài Khoản" Binding="{Binding AccountId,Mode=OneWay}" Width="100"/>
                        <DataGridTextColumn Header="Ngày Đặt" Binding="{Binding OrderDate,Mode=OneWay}" Width="150"/>
                        <DataGridTextColumn Header="Tổng Tiền" Binding="{Binding TotalPrice,Mode=OneWay}" Width="100"/>
                        <DataGridTextColumn Header="Số điện thoại" Binding="{Binding PhoneNumber,Mode=OneWay}" Width="100"/>
                        <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address,Mode=OneWay}" Width="100"/>
                        <DataGridTextColumn Header="Trạng Thái" Binding="{Binding Status,Mode=OneWay}" Width="120"/>
                        <DataGridTemplateColumn Header="Duyệt">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="✔" Background="#28A745" Foreground="White" Width="35" Height="25" Margin="2"
                                                FontWeight="Bold" Cursor="Hand" BorderThickness="0"
                                                Click="btnAccept_Click"/>
                                        <Button Content="✖" Background="#DC3545" Foreground="White" Width="35" Height="25" Margin="2"
                                                FontWeight="Bold" Cursor="Hand" BorderThickness="0"
                                                Click="btnReject_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Danh sách chi tiết đơn hàng -->
            <TextBlock Text="Chi Tiết Đơn Hàng" FontWeight="Bold" FontSize="14" Margin="10,10,0,5"/>
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Background="White" Padding="10">
                <DataGrid Name="dgvOrderDetails" AutoGenerateColumns="False" CanUserAddRows="False"
                          RowBackground="White" AlternatingRowBackground="#F0F0F0"
                          BorderThickness="0" GridLinesVisibility="None">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã SP" Binding="{Binding ProductId}" Width="80"/>
                        <DataGridTextColumn Header="Tên Sản Phẩm" Binding="{Binding ProductName}" Width="200"/>
                        <DataGridTextColumn Header="Số Lượng" Binding="{Binding Quantity}" Width="100"/>
                        <DataGridTextColumn Header="Đơn Giá" Binding="{Binding Price}" Width="100"/>
                        <DataGridTextColumn Header="Thành Tiền" Binding="{Binding Total}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </StackPanel>
    </Grid>
</Window>
