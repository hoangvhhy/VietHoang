<Window x:Class="ProjectPRN.AddPhoneNumber"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN"
        mc:Ignorable="d"
        Title="AddPhoneNumber" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Label x:Name="lblQuestion" Content="Add PhoneNumber" FontSize="14" VerticalAlignment="Top" Margin="0,0,0,10"/>
        <TextBox x:Name="txtAnswer" VerticalAlignment="Center" Margin="0,30,0,0" Height="30"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,60,0,0">
            <Button Content="OK" Name="btnAccept" Width="80" Margin="5" Click="btnAccept_Click"/>
            <Button Content="Hủy" Name="btnCancel" Width="80" Margin="5" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
