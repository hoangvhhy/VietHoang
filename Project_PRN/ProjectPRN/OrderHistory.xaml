<Window x:Class="ProjectPRN.OrderHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN"
        mc:Ignorable="d"
        Title="OrderHistory" Height="450" Width="800" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <!-- Title -->
        <TextBlock Text="Lịch Sử Mua Hàng" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <!-- Order List -->
        <DataGrid x:Name="dgvOrderHistory" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,50,0,70">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã Đơn Hàng" Binding="{Binding OrderId}" Width="85"/>
                <DataGridTextColumn Header="Ngày Đặt Hàng" Binding="{Binding OrderDate, StringFormat=dd/MM/yyyy}" Width="150"/>
                <DataGridTextColumn Header="Tổng Tiền (VND)" Binding="{Binding TotalPrice, StringFormat={}{0:N0}}" Width="130"/>
                <DataGridTextColumn Header="Trạng Thái" Binding="{Binding Status}" Width="100"/>
                <DataGridTemplateColumn Header="Chi Tiết" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Xem" Name="btnViewDetail" Tag="{Binding OrderId}" Width="60" Height="25" Background="LightBlue" Click="btnViewDetail_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Hành động" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- Nút Hủy -->
                                <Button Content="Hủy" Tag="{Binding OrderId}" Name="btnCancel" Width="80" Height="25" 
                                Background="Red" Foreground="White" Click="btnCancel_Click"/>
                            </StackPanel>

                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Close Button -->
        <Button Content="Đóng" Name="btnClose" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Margin="0,0,10,10" Background="#007ACC" Foreground="White" Click="btnClose_Click"/>
    </Grid>
</Window>
