<Window x:Class="ProjectPRN.WindowProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN"
        mc:Ignorable="d"
        Title="WindowProduct" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <local:ImagePathConverter x:Key="ImagePathConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <DataGrid Grid.Column="0" Grid.Row="1" Name="dgvDisplay" AutoGenerateColumns="False" CanUserAddRows="False"
          SelectedCellsChanged="dgvDisplay_SelectedCellsChanged">
                <DataGrid.Columns>

                    <DataGridTextColumn Header="Category" Binding="{Binding Path=Category.CategoryName}"/>
                    <DataGridTextColumn Header="ProductName" Binding="{Binding Path=ProductName}"/>
                    <DataGridTextColumn Header="Brand" Binding="{Binding Path=Brand}"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Path=Description}"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Path=Price}"/>
                    <DataGridTextColumn Header="StockQuantity" Binding="{Binding Path=StockQuantity}"/>
                    <DataGridTemplateColumn Header="Image">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Width="50" Height="50">
                                    <Image.Source>
                                        <Binding Path="Image">
                                            <Binding.Converter>
                                                <local:ImagePathConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Image.Source>
                                </Image>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


                    <DataGridTextColumn Header="status" Binding="{Binding Path=status}"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                <!-- Ô nhập tìm kiếm -->
                <Label Content="Tìm kiếm:" VerticalAlignment="Center"/>
                <TextBox Name="txtSearch" Width="100" Margin="5,0" Height="20"/>
                <Button Name="btnSearch" Content="Tìm" Width="50" Click="btnSearch_Click" Height="20"/>

                <!-- Bộ lọc theo danh mục -->
                <Label Content="Danh mục:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <ComboBox Name="cbxCategoryFilter" Width="120" Height="20"/>

                <!-- Bộ lọc theo trạng thái -->
                <Label Content="Trạng thái:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <ComboBox Name="cbxStatusFilter" Width="75" Height="20">
                    <ComboBoxItem Content="Tất cả"/>
                    <ComboBoxItem Content="Active"/>
                    <ComboBoxItem Content="Inactive"/>
                </ComboBox>

                <Button Name="btnFilter" Content="Lọc" Width="50" Height="20" Margin="10,0,0,0" Click="btnFilter_Click"/>
            </StackPanel>

        </Grid>

        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5" Visibility="Collapsed">
                <Label Content="ID" Width="50"/>
                <TextBox Name="txtid" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Loại" Width="50"/>
                <ComboBox Name="cbxcate" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Tên" Width="50"/>
                <TextBox Name="txtname" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Hãng" Width="50"/>
                <TextBox Name="txtbrand" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Mô tả" Width="50"/>
                <TextBox Name="txtdescription" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Giá" Width="50"/>
                <TextBox Name="txtprice" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Số lượng" Width="50"/>
                <TextBox Name="txtstock" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Ảnh" Width="50"/>
                <TextBox Name="txtimage" Width="150" IsReadOnly="True"/>
                <Button Name="btnSelectImage" Content="..." Width="30" Click="btnSelectImage_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Trạng thái" Width="50"/>
                <ComboBox Name="cbxStatus" Width="200">
                    <ComboBoxItem Content="Active"/>
                    <ComboBoxItem Content="Inactive"/>
                </ComboBox>
            </StackPanel>

            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>

                    </Grid.ColumnDefinitions>
                    <Button Name="btninsert" Grid.Column="0" Width="50" Content="Thêm"
                            Click="btninsert_Click"/>
                    <Button Name="btnupdate" Grid.Column="1" Width="50" Content="Sửa" 
                            Click="btnupdate_Click"/>

                </Grid>
            </StackPanel>
            <StackPanel Margin="0,0,0,5" >
                <Button Name="btnnhaphang" Content="Nhập hàng" Width="70" Click="btnnhaphang_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
