<Window x:Class="ProjectPRN.AdminStatistic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN"
        mc:Ignorable="d"
        Title="Thống kê" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Margin="10,0,10,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Bộ lọc thời gian -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <TextBlock Text="Từ ngày: " FontWeight="Bold" FontSize="14" Margin="0,0,5,0"/>
            <DatePicker Name="dpStartDate" Width="120"/>

            <TextBlock Text="Đến ngày: " FontWeight="Bold" FontSize="14" Margin="10,0,5,0"/>
            <DatePicker Name="dpEndDate" Width="120"/>

            <Button Content="Lọc" Click="btnFilter_Click" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Thông tin thống kê -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Tổng doanh thu: " FontWeight="Bold" FontSize="14"/>
                <TextBlock Name="txtTotalRevenue" FontSize="14" Foreground="Green"/>
                <TextBlock Text="Tổng tiền vốn: " FontWeight="Bold" FontSize="14"/>
                <TextBlock Name="txtTotalCost" FontSize="14" Foreground="Green"/>
                <TextBlock Text="Tổng lợi nhuận: " FontWeight="Bold" FontSize="14"/>
                <TextBlock  Name="txtTotalProfit" FontSize="14" Foreground="Green"/>
                <TextBlock Text="Hàng bán chạy nhất: " FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="N/A" Name="txtBestSelling" FontSize="14" Foreground="Purple"/>
                <TextBlock Text="Đã bán: " FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="N/A" Name="txtTotalBestSelling" FontSize="14" Foreground="Purple"/>
                
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Vertical">
                <TextBlock Text="Loại hàng bán được nhiều nhất: " FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="N/A" Name="txtCate" FontSize="14" Foreground="Red"/>
                <TextBlock Text="Đã bán: " FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="N/A" Name="txtTotalCate" FontSize="14" Foreground="Red"/>
                <TextBlock Text="Hãng bán được nhiều nhất: " FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="N/A" Name="txtBrand" FontSize="14" Foreground="Red"/>
                <TextBlock Text="Đã bán: " FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="N/A" Name="txtTotalBrand" FontSize="14" Foreground="Red"/>
                
                <TextBlock Text="Hàng đã bán: " FontWeight="Bold" FontSize="14"/>
                <Button Name="btnSell" Content="Xem hàng đã bán" Width="120" HorizontalAlignment="Left" Click="btnSell_Click"/>
                <TextBlock Text="Hàng còn lại: " FontWeight="Bold" FontSize="14"/>
                <Button Name="btnProduct" Content="Xem hàng còn lại" Width="120" HorizontalAlignment="Left" Click="btnProduct_Click"/>
                <TextBlock Text="Hàng nhập: " FontWeight="Bold" FontSize="14"/>
                <Button Name="btnImport" Content="Xem hàng đã nhập" Width="120" HorizontalAlignment="Left" Click="btnImport_Click"/>
               
            </StackPanel>
        </Grid>

        <!-- Danh sách sản phẩm bán chạy -->
        <Grid Grid.Row="2">


            <!-- Top 5 bán chạy nhất -->
            <StackPanel Grid.Column="0" Margin="10" >
                <TextBlock Text="5 sản phẩm bán chạy nhất" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <DataGrid Name="dgTop5BestSelling" AutoGenerateColumns="False" HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName,Mode=OneWay}"/>
                        <DataGridTextColumn Header="Total Sold" Binding="{Binding TotalSold,Mode=OneWay}" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

           
        </Grid>
    </Grid>
</Window>
