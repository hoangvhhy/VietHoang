<Window x:Class="ProjectPRN.EditProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditProfile" Height="600" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="Chỉnh sửa thông tin" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center" Grid.Row="0" />

        <!-- Nội dung chỉnh sửa -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top" >
            <!-- Họ và tên -->
            <Label Content="Họ và tên:" />
            <TextBox Name="txtFullName" Margin="0,5" />

            <!-- Email -->
            <Label Content="Email:" />
            <TextBox Name="txtEmail" Margin="0,5" IsReadOnly="True" />

            <!-- Số điện thoại -->
            <Label Content="Số điện thoại:" />
            <Grid Margin="0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ListBox Name="lbPhoneNumbers" Grid.Row="0" Margin="0,5" SelectionMode="Single" />

                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,5">
                    <Button Content="Thêm" Width="80" Margin="5,0" Click="btnAddPhoneNumber_Click" />
                    <Button Content="Sửa" Width="80" Margin="5,0" Click="btnEditPhoneNumber_Click" />
                    <Button Content="Xóa" Width="80" Margin="5,0" Click="btnDeletePhoneNumber_Click" />
                </StackPanel>
            </Grid>

            <!-- Địa chỉ -->
            <Label Content="Địa chỉ:" Margin="0,10,0,0" />
            <Grid Margin="0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ListBox Name="lbAddresses" Grid.Row="0" Margin="0,5" SelectionMode="Single" />

                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,5">
                    <Button Content="Thêm" Name="btnAddAddress" Width="80" Margin="5,0" Click="btnAddAddress_Click" />
                    <Button Content="Sửa" Name="btnEditAddress" Width="80"  Margin="5,0" Click="btnEditAddress_Click" />
                    <Button Content="Xóa" Name="btnDeleteAddress" Width="80" Margin="5,0" Click="btnDeleteAddress_Click" />
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Nút thao tác -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0" >
            <Button Content="Đổi mật khẩu" Name="btnChangePassword" Background="#007ACC" Foreground="White" Width="120" Height="30" Click="btnChangePassword_Click" />
            <Button Content="Lưu thay đổi" Name="btnSaveChange" Background="#007ACC" Foreground="White" Width="120" Height="30" Margin="10,0,0,0" Click="btnSaveChange_Click" />
        </StackPanel>
    </Grid>
</Window>
