<Window x:Class="ProjectPRN.AdminImport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN"
        mc:Ignorable="d"
        Title="Danh sách sản phẩm đã nhập" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgvImportList" Grid.Row="1" AutoGenerateColumns="False" Language="vi-VN">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sản phẩm" Binding="{Binding ProductName,Mode=OneWay}"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity,Mode=OneWay}"/>
                <DataGridTextColumn Header="Giá nhập" Binding="{Binding ImportPrice,Mode=OneWay,StringFormat={}{0:N0}}"/>
                <DataGridTextColumn Header="Ngày nhập" Binding="{Binding ImportDate,Mode=OneWay}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="btnBack" Content="Quay lại" Width="50" Height="20" Click="btnBack_Click" HorizontalAlignment="Left"/>
    </Grid>
</Window>
