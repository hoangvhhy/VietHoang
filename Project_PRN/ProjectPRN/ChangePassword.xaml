<Window x:Class="ProjectPRN.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN"
        mc:Ignorable="d"
        Title="ChangePassword" Height="450" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Đổi mật khẩu" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>

            <Label Content="Mật khẩu cũ:" />
            <PasswordBox Name="txtOldPassword" Margin="0,5"/>

            <Label Content="Mật khẩu mới:" />
            <PasswordBox Name="txtNewPassword" Margin="0,5"/>

            <Label Content="Nhập lại mật khẩu mới:" />
            <PasswordBox Name="txtConfirmPassword" Margin="0,5"/>

            <Button Content="Lưu thay đổi" Name="btnSaveChangePassword" Background="#007ACC" Foreground="White" 
                    Width="120" Height="30" HorizontalAlignment="Right" Margin="0,10,0,0"
                    Click="btnSaveChangePassword_Click" />
        </StackPanel>
    </Grid>
</Window>
