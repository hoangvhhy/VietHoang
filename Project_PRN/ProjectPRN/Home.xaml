<Window x:Class="ProjectPRN.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Home" Height="600" Width="800" Background="#F0F0F0" WindowState="Maximized" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">

    <Grid>
        <TextBlock Text="Football Store" FontSize="30" FontWeight="Bold" Foreground="#007ACC" 
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,10,0,0"/>

        <TextBlock x:Name="txtUserName" FontSize="15" FontWeight="Bold" Foreground="#007ACC" 
       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,10,0,0"/>

        <Button Content="Profile" Name="btnEditProfile" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,255,0" 
            Background="#28A745" Foreground="White" Click="btnEditProfile_Click" />

        <Button Content="Order History" Name="btnOrderHistory" Width="120" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" 
            Margin="0,10,130,0" Background="#17A2B8" Foreground="White" Click="btnOrderHistory_Click" />

        <Button Content="Xem giỏ hàng" Name="btnCart" Width="120" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top"
            Margin="0,10,5,0" Background="#007ACC" Foreground="White" Click="Cart_Click" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,50,0,0">
            <ComboBox x:Name="cmbBrandFilter" Width="150" Margin="0,0,10,0" HorizontalAlignment="Left" VerticalAlignment="Center" SelectionChanged="cmbBrandFilter_SelectionChanged">
            </ComboBox>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10,80,20,10">
            <ItemsControl x:Name="productList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="10">
                            <StackPanel Width="170" Background="White">
                                <Image Source="{Binding Image}" Height="170" Stretch="UniformToFill"/>

                                <TextBlock Text="{Binding ProductName}" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="5" TextTrimming="CharacterEllipsis" />

                                <TextBlock Text="{Binding Brand}" FontSize="14" Foreground="Gray" TextAlignment="Center" Margin="2"/>

                                <TextBlock Text="{Binding StockQuantity ,StringFormat='Remain: {0}'}" FontSize="14" Foreground="Gray" TextAlignment="Center" Margin="2"/>

                                <TextBlock Text="{Binding Price, StringFormat=C0}" FontSize="14" Foreground="Red" TextAlignment="Center" Margin="5"/>

                                <Button Content="Thêm vào giỏ hàng" Name="btnAddToCart" Background="Orange" Foreground="White" Margin="5" Click="btnAddToCart_Click"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
