<Window x:Class="ProjectPRN.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN"
        mc:Ignorable="d"
        Title="Admin" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        
        <TabControl Grid.Column="0" Margin="10">
            <!-- Tab Hiển thị Customer -->
            <TabItem Header="Khách hàng">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <!-- DataGrid chiếm 2 phần -->
                        <ColumnDefinition Width="*" />
                        <!-- Phần nhập liệu chiếm 1 phần -->
                    </Grid.ColumnDefinitions>
                    <DataGrid Name="dgvDisplayCustomer" AutoGenerateColumns="False" CanUserAddRows="False" SelectedCellsChanged="dgvDisplayCustomer_SelectedCellsChanged"
                              Margin="10" Grid.Column="0" Height="400" VerticalAlignment="Top">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Path=AccountId}" Width="40"/>
                            <DataGridTextColumn Header="Họ tên" Binding="{Binding Path=FullName}" Width="120"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Path=Email}" Width="170"/>
                            <DataGridTextColumn Header="Mật khẩu" Binding="{Binding Path=Password}" Width="100"/>
                            <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Path=Address}" Width="300"/>
                            <DataGridTextColumn Header="Số điện thoại" Binding="{Binding Path=Phone}" Width="120"/>
                            <DataGridTextColumn Header="Trạng thái" Binding="{Binding Path=StatusVN}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Margin="10" Grid.Column="1" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Button Content="Search" Width="100" Click="btnSearch_Click"/>
                            <TextBox Name="txtsearch" Width="250"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5" Visibility="Collapsed">
                            <Label Content="Id" Width="100"/>
                            <TextBox Name="txtId" Width="250"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label Content="Họ tên" Width="100"/>
                            <TextBox Name="txtname" Width="250"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label Content="Email" Width="100"/>
                            <TextBox Name="txtemail" Width="250"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label Content="Mật khẩu" Width="100"/>
                            <TextBox Name="txtpassword" Width="250"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label Content="Địa chỉ" Width="100"/>
                            <TextBox Name="txtaddress" Width="250"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label Content="Số điện thoại" Width="100"/>
                            <TextBox Name="txtphone" Width="250"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label Content="Trạng thái" Width="100"/>
                            <RadioButton Name="rdoActive" Content="Hoạt động" VerticalAlignment="Center"/>
                            <RadioButton Name="rdoInactive" Content="Ngừng hoạt động" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="Thêm" Width="80" Name="btnInsert" Click="btnInsert_Click"/>
                            <Button Grid.Column="1" Content="Sửa" Width="80" Name="btnUpdate" Click="btnUpdate_Click"/>
                            <Button Grid.Column="2" Content="Xoá" Width="80" Name="btnDelete" Click="btnDelete_Click"/>
                            <Button Grid.Column="3" Content="Quay lại " Width="80" Name="btnBack" Click="btnBack_Click"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab Hiển thị Staff -->
            <TabItem Header="Nhân viên" HorizontalAlignment="Right" Margin="0,-2,-2,0" Width="70">
                <Grid>
                   
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <!-- DataGrid chiếm 2 phần -->
                            <ColumnDefinition Width="*" />
                            <!-- Phần nhập liệu chiếm 1 phần -->
                        </Grid.ColumnDefinitions>
                    <DataGrid Name="dgvDisplayStaff" AutoGenerateColumns="False" CanUserAddRows="False" SelectedCellsChanged="dgvDisplayStaff_SelectedCellsChangedStaff"
                              Margin="10" Grid.Column="0" Height="400" VerticalAlignment="Top">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Path=AccountId}" Width="40"/>
                            <DataGridTextColumn Header="Họ tên" Binding="{Binding Path=FullName}" Width="120"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Path=Email}" Width="170"/>
                            <DataGridTextColumn Header="Mật khẩu" Binding="{Binding Path=Password}" Width="100"/>
                            <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Path=Address}" Width="300"/>
                            <DataGridTextColumn Header="Số điện thoại" Binding="{Binding Path=Phone}" Width="120"/>
                            <DataGridTextColumn Header="Trạng thái" Binding="{Binding Path=StatusVN}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Margin="10" Grid.Column="1" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Button Content="Search" Width="100" Click="btnSearch_Click1"/>
                            <TextBox Name="txtsearch1" Width="250"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5" Visibility="Collapsed">
                            <Label Content="Id" Width="100"/>
                            <TextBox Name="txtId1" Width="250"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label Content="Họ tên" Width="100"/>
                            <TextBox Name="txtname1" Width="250"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label Content="Email" Width="100"/>
                            <TextBox Name="txtemail1" Width="250"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label Content="Mật khẩu" Width="100"/>
                            <TextBox Name="txtpassword1" Width="250"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label Content="Địa chỉ" Width="100"/>
                            <TextBox Name="txtaddress1" Width="250"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label Content="Số điện thoại" Width="100"/>
                            <TextBox Name="txtphone1" Width="250"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label Content="Trạng thái" Width="100"/>
                            <RadioButton Name="rdoActive1" Content="Hoạt động" VerticalAlignment="Center"/>
                            <RadioButton Name="rdoInactive1" Content="Ngừng hoạt động" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="Thêm" Width="80" Name="btnInsert1" Click="btnInsert_Click1"/>
                            <Button Grid.Column="1" Content="Sửa" Width="80" Name="btnUpdate1" Click="btnUpdate_Click1"/>
                            <Button Grid.Column="2" Content="Xoá" Width="80" Name="btnDelete1" Click="btnDelete_Click1"/>
                            <Button Grid.Column="3" Content="Quay lại" Width="80" Name="btnBack1" Click="btnBack_Click"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
